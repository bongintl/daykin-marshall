<div class="grid buildings">
    {% for building in craft.entries.section('buildings').all if building.thumbnail | length %}
        <div class="s-col-6 m-col-4">
            <div class="s-gap-bottom-1 m-gap-x-1 m-gap-bottom-3">
                <dms-hover url="{{ building.url }}">
                    <a href="{{ building.url }}">
                        {% include 'components/glow-image/glow-image' with {
                            asset: building.thumbnail.one,
                            title: building.title
                        } only %}
                    </a>
                </dms-hover>
            </div>
        </div>
    {% endfor %}
</div>