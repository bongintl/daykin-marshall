{% import 'macros/dms' as dms %}

{% set padding = craft.app.request.url == '/' or craft.app.request.url == '/buildings' ? 's-pad-top-8' : 's-pad-top-50vh' %}

<div class="grid {{ padding }}">
    {% for post in posts %}
        {% for asset in post.images.all %}
            <div class="s-col-12 s-gap-bottom-1 m-gap-bottom-1">
                <dms-hover url="{{ dms.urls( post ) }}">
                    {% set transitionId = "post_#{ post.id }_#{ asset.id }" %}
                    {% include 'components/glow-image/glow-image' with {
                        asset: asset,
                        attrs: { 'data-transition-id': transitionId }
                    } %}
                </dms-hover>
            </div>
        {% endfor %}
    {% endfor %}
</div>