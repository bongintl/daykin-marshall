{% for item in items %}
    <div class="grid grid--fill text-l l-reverse">
        <div class="s-col-12 l-col-6 bevel-up">
            <div class="grid-padding s-pad-top-1 s-pad-bottom-3">
                <p class="nomargin"><dms-engraved>{{ item.projectTitle }}</dms-engraved></p>
                <p class="nomargin"><dms-engraved>{{ item.collaboratorName }}</dms-engraved></p>
                
                <div class="s-pad-top-1 nomargin">
                    <dms-engraved>{{ item.quote }}</dms-engraved>
                </div>
            </div>
        </div>
        <div class="s-col-12 l-col-6 bevel-up">
            {% set image = item.image.one %}
            {% include 'components/image/image' with { asset : image } %}
            <div class="fill bevel-up no-pointer"></div>
        </div>
    </div>
{% endfor %}

